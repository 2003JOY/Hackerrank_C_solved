#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main()
{
	
    int a, b;
    float x, y;
    
    // read two integers
    scanf("%d %d", &a, &b);
    
    // read two floats
    scanf("%f %f", &x, &y);
    
    // integer sum and difference
    printf("%d %d\n", a + b, a - b);
    
    // float sum and difference (rounded to 1 decimal place)
    printf("%.1f %.1f\n", x + y, x - y);
    return 0;
}
