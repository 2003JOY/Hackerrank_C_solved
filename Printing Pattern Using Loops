#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() 
{

    int n;
    scanf("%d", &n);
  	// Complete the code to print the pattern.
    int size = 2 * n - 1;

    for (int i = 0; i < size; i++) {
        for (int j = 0; j < size; j++) {
            // distance from top, left, bottom, right edges
            int top = i;
            int left = j;
            int bottom = size - 1 - i;
            int right = size - 1 - j;

            int minDist = top;
            if (left < minDist) minDist = left;
            if (bottom < minDist) minDist = bottom;
            if (right < minDist) minDist = right;

            int val = n - minDist;
            printf("%d", val);

            if (j < size - 1) printf(" "); // space between numbers
        }
        printf("\n");
    }
    return 0;
}
